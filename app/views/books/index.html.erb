<body>  
<h1>Books</h1>
<div class="index-body">
  <div class="index-title">
  <% @books.each do |book| %>
    <h5>Title</h5>
    <%= book.title %>
  </div>
  <div class="index-body">
    <h5>Body</h5>
    <%= book.body %>
    <a><%= link_to "Show", book_path(book) %></a>
    <a><%= link_to "Edit", edit_book_path(book) %></a>
    <a><%= link_to "Destroy", book_path(book), method: :delete %></a>
  <% end %>
  </div>
  <div class="index-new">
  <%= form_for @book do |f| %>
    <h2>New book</h2>
  <div class="field">
    <p>Title</p>
    <%= f.text_field :title, class: "form-text-field" %>
  </div>
  <div class="field">
    <p>Body</p>
    <%= f.text_area :body, class: "form-text-area" %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book", class: "form-submit" %>
  </div>
  <% end %>
  </div>
</div>
</body>



